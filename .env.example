# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_DB=0

# BullMQ Queues
QUEUE_PRICE_MONITOR=price-monitor
QUEUE_ALERT_GENERATOR=alert-generator
QUEUE_REPORT_GENERATOR=report-generator

# Monitoring Settings
MONITOR_INTERVAL=3600  # 1 hour
PRICE_CHANGE_THRESHOLD=5.0  # 5% change
STOCK_THRESHOLD=10

# Twilio Configuration
TWILIO_ACCOUNT_SID=your_account_sid
TWILIO_AUTH_TOKEN=your_auth_token
TWILIO_PHONE_NUMBER=your_phone_number

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# Report Settings
REPORT_DIR=reports
REPORT_FORMAT=pdf

# Language Settings
DEFAULT_LANGUAGE=bn  # bn for Bengali, en for English
SUPPORTED_LANGUAGES=bn,en

# Dashboard Settings
DASHBOARD_REFRESH_INTERVAL=30  # 30 seconds

# Next.js Configuration
NEXT_PUBLIC_WS_URL=ws://localhost:8000/ws/monitor
NEXT_PUBLIC_API_URL=http://localhost:8000/api
